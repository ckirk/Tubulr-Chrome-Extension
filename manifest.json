{
	"manifest_version": 2,
	"version": "0.0.5",
	"name": "Tubulr Button",
	"short_name": "Tubulr",

	"description": "Add a video to Tubulr, from any web page!",
	"icons": {
	  "16": "icon-16.png",
	  "48": "icon-48.png",
   	"128": "icon-128.png" },

  "browser_action": {
  	"default_icon": "icon-128.png",
  	"default_title": "Tubulr Button"
  },

  "author": "Chris Kirkinis",
  "background": {
  	"scripts": ["background.js"],
  	"persistent": false
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://cdn.mxpnl.com/libs/mixpanel-2-latest.min.js https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js https://www.tubulr.tv https://tubulr.herokuapp.com; object-src 'self'",
 	"homepage_url": "http://www.tubulr.tv",
 	"permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
 	]
}